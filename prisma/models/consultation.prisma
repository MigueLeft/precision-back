model Consultation {
  id                          String    @id @default(cuid())
  appointmentId              String    
  realizationDateTime        DateTime  // fecha_hora_realizacion
  anamnesis                  String?   // motivo_consulta_clinico
  indicatedTreatment         String?   // tratamiento_indicado
  performedProcedures        String?   // procedimientos_realizados
  issuedPrescriptions        String?   // recetas_emitidas
  patientInstructions        String?   // indicaciones_al_paciente
  suggestedNextControl       DateTime? // proximo_control_sugerido
  additionalMedicalNotes     String?   // notas_medicas_adicionales
  registeredByUserId         String    // id_usuario_registra
  clinicalRegistrationDate   DateTime  @default(now()) // fecha_registro_clinico
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt
  active                     Boolean   @default(true)

  // Relaciones
  appointment                     Appointment                     @relation(fields: [appointmentId], references: [id])
  @@unique([appointmentId]) // Una consulta por cita
}